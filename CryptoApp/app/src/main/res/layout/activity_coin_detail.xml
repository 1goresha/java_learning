<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinDetailActivity"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/ivLogoCoin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BTC / USD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:textColor="#0051FF"
        app:layout_constraintTop_toBottomOf="@id/ivLogoCoin"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@id/tvCurrency"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Цена:   7352,5"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPriceMinForDay"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Минимум за день:   7352,5"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceMinForDay"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPriceMaxForDay"
        app:layout_constraintTop_toBottomOf="@id/tvPriceMinForDay"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Максимум за день:   7889,5"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceMaxForDay"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLastMarket"
        app:layout_constraintTop_toBottomOf="@id/tvPriceMaxForDay"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Последняя сделка:   Bitfinix"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#63000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLastMarket"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLastUpdate"
        app:layout_constraintTop_toBottomOf="@id/tvLastMarket"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Обновленно:   21:05:06"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>